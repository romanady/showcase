{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}
    <h1>Movies Collection</h1>
    {% set url = 'movie_index' %}
    {% if pagination == null %}
        no records found
    {% else %}
        {{ knp_pagination_render(pagination) }}
        Total: {{ pagination.getTotalItemCount }}

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Body</th>
                    <th>KeyArtImages</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for movie in pagination %}
                <tr>
                    <td><a href="{{ path('movie_show', {'id': movie.id}) }}">{{ movie.id }}</a></td>

                    <td>{{ movie.body }}</td>
                    <td>{{ movie.image|imageRender('keyArtImages')|raw }}</td>
                    <td>
                        <a href="{{ path('movie_show', {'id': movie.id}) }}">show</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
